                                    Grid.Column="0" />
                            <Button Content="VISTA Menu Items"
                                    Height="20"
                                    Command="{Binding VistaMenuItemsCommand}"
                                    ToolTip="..."
                                    Grid.Row="1"
                                    Grid.Column="0" />
                        </Grid>
                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>

                <!-- Paperwork Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="Paperwork">
