                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Button Content="Meeting Attendance"
                                    Height="20"
                                    Command="{Binding MeetingAttendStaffCommand}"
                                    ToolTip="Provider Productivity Data"
                                    Grid.Row="0"
                                    Grid.Column="0" />
                            <Button Content="Productivity"
                                    Height="20"
                                    Command="{Binding ProductivityCommand}"  
                                    ToolTip="Provider Productivity Data"
                                    Grid.Row="0"  
                                    Grid.Column="1" />
                            <Button Content="CPT Codes"
                                    Command="{Binding ProductivityCptCommand}"
                                    Height="20"
                                    Grid.Row="1"   
                                    Grid.Column="1" />
                            <Button Content="Dx Codes"
                                    Command="{Binding ProductivityDxCommand}"
                                    Height="20"          
                                    Grid.Row="2"
                                    Grid.Column="1" />
                        </Grid>
                    </Fluent:RibbonGroupBox>
                    
                </Fluent:RibbonTabItem>
                
                <!--Knowledge Base Tab-->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                    behaviors:RibbonTabsBehavior.IsHomeTab="True"
                    Header="Knowledge Base">
