                                    Grid.Row="1"
                                    Grid.Column="0" />
                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>

                    <Fluent:RibbonGroupBox State="Middle"
                                           MinWidth="150"
                                           Header="Forms Management">

                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Middle"
                                           MinWidth="150"
                                           Header="Form Fillers">

                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>

                <!-- Scheduling Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="Schedules">
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Leave Calendars">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Button Content="{x:Static properties:Resources.ShellMenuLeavePollHeader}"
                                    Command="{Binding LeavePollCommand}"
                                    Grid.Row="2"
                                    Grid.Column="0" />
                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>

                    <Fluent:RibbonGroupBox State="Middle"
                                           MinWidth="150"
                                           Header="{x:Static properties:Resources.ShellPageRibbonToolsGroupCommon2Header}">
                       
                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>

                <!-- Credentialing Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="Credentialing">
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Peer Reviews">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Button Content="CPR Overview"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="FPPEs"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="Open Assignments"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Height="20" />
                            <Button Content="Flagged Assignments"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="20" />
                            <Button Content="Open Assignments"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Height="20" />
                            <Button Content="Flagged Assignments"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Height="20" />
                        </Grid>
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Peer Reviews">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Button Content="Assignment Maker"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="CPR Pools"
                                    Command="{Binding CprPoolsCommand}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="CPR Builder"
                                    Command="{Binding CprBuilderCommand}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Height="20" />
                            
                        </Grid>
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Middle"
                                           MinWidth="150"
                                           Header="Practice Evaluations">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Button Content="OPPEs"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="FPPEs"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="Generate OPPEs"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Height="20" />
                            <Button Content="Generate FPPEs"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="20" />
                        </Grid>
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox Header="{x:Static properties:Resources.ShellPageRibbonHomeGroupCredentialingHeader}"
                                           State="Large">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Content="Privileges Expire: "
                                   Height="25"
                                   Grid.Row="0"
                                   Grid.Column="0" />
                            <Button Content="Privileges"
                                    Command="{Binding PrivilegesCommand}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Height="20" />
                            <Button Content="Assignments"
                                    Command="{Binding CprReviewStaffCommand}"
                                    Height="20"
                                    ToolTip="Review Current and prior CPR Assignments"
                                    Grid.Row="1"
                                    Grid.Column="1" />
                            <Button Content="New Privilege"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    ToolTip="Initiate a request for new Privileges"
                                    Height="20" />
                            <Button Content="Decline Priv"
                                    Height="20"
                                    ToolTip="Initiate the process to remove a current Privilege"
                                    Grid.Row="2"
                                    Grid.Column="1" />
                        </Grid>
                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>

                <!-- SpecialtyStaff Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="Specialty Staff">
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Fee Basis">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            
                            <Button Content="Fee Basis"
                                    ToolTip="Collapse this control for Non=FeeBasis Providers"
                                    Command="{Binding FeeBasisStaffCommand}"
                                    Grid.Row="0"
                                    Grid.Column="1" />
                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Volunteers">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            
                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="WoC Providers">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>


                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Students">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>


                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Residents">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>


                        </Grid>
                        <Image Grid.Column="0"
                               Grid.Row="0" />
                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>

                <!-- Program Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="{x:Static properties:Resources.ShellPageRibbonTabProgramHeader}">
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="Programs">
                        <Grid HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                        </Grid>
                    </Fluent:RibbonGroupBox>
                    <Fluent:RibbonGroupBox State="Middle"
                                           MinWidth="150"
                                           Header="Program Reviews">
                    </Fluent:RibbonGroupBox>
                </Fluent:RibbonTabItem>
                
                <!-- Supervisor Tab -->
                <Fluent:RibbonTabItem Fluent:KeyTip="A"
                                      behaviors:RibbonTabsBehavior.IsHomeTab="False"
                                      Header="{x:Static properties:Resources.ShellPageRibbonTabSupervisorHeader}">
                    <Fluent:RibbonGroupBox State="Large"
                                           MinWidth="220"
                                           Header="{x:Static properties:Resources.ShellPageRibbonSupervisorGroupCommon1Header}">
                        <Grid>
                            <Grid.ColumnDefinitions>
