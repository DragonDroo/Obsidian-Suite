<Window x:Class="Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Day="clr-namespace:CalendarDaySelect;assembly=CalendarDaySelect"
        xmlns:rc="clr-namespace:RtfEditor;assembly=RtfEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Rtf Compact">
                <rc:RtfCompact>
                    
                </rc:RtfCompact>
            </TabItem>
            <TabItem Header="Month View">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  x:Name="MonthGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Sunday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0" />
                <TextBlock Text="Monday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="1" />
                <TextBlock Text="Tuesday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="2" />
                <TextBlock Text="Wednesday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="3" />
                <TextBlock Text="Thursday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="4" />
                <TextBlock Text="Friday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="5" />
                <TextBlock Text="Saturday"
                           TextAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="6" />
            </Grid>
            <StackPanel Grid.Column="7">
                <Button Content="Day"
                        Click="Button_Click" />
            </StackPanel>
        </Grid>
            </TabItem>
            <TabItem Header="Year View">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" x:Name="CalendarFrame">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>    
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    
                        <TextBlock Text="January  " Grid.Row="1"/>
                        <TextBlock Text="Feruary  " Grid.Row="2"/>
                        <TextBlock Text="March    " Grid.Row="3"/>
                        <TextBlock Text="April    " Grid.Row="4"/>
                        <TextBlock Text="May      " Grid.Row="5"/>
                        <TextBlock Text="June     " Grid.Row="6"/>
                        <TextBlock Text="July     " Grid.Row="7"/>
                        <TextBlock Text="August   " Grid.Row="8"/>
                        <TextBlock Text="September" Grid.Row="9"/>
                        <TextBlock Text="October  " Grid.Row="10"/>
                        <TextBlock Text="Novemer  " Grid.Row="11"/>
                        <TextBlock Text="December " Grid.Row="12"/>
                        
                        
                        
                        <TextBlock Text="S" Grid.Column="1"  TextAlignment="Center"/>
                        <TextBlock Text="M" Grid.Column="2"  TextAlignment="Center"/>
                        <TextBlock Text="T" Grid.Column="3"  TextAlignment="Center"/>
                        <TextBlock Text="W" Grid.Column="4"  TextAlignment="Center"/>
                        <TextBlock Text="T" Grid.Column="5"  TextAlignment="Center"/>
                        <TextBlock Text="F" Grid.Column="6"  TextAlignment="Center"/>
