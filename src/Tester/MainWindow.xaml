                    </Grid>
                    
                    <Button Grid.Column="1"
                            Content="Populate" 
                            Click="Button_Click_1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Monthly">
                <Day:MonthSelect />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
